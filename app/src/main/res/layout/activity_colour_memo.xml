<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.nokukhanya.quizapp.colourMemo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="189dp"
                android:src="@drawable/khanya"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOLUTIONS"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="cursive"
                android:textSize="40sp"
                android:textColor="#FF00FF"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="____________________________"
                android:textAlignment="center"
                android:textColor="#00BFFF"/>





            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/answerColour1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.Blue,"
                    android:textColor="#0000FF"
                    android:textSize="20sp"
                    android:layout_marginLeft="47dp"
                    android:layout_marginStart="47dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="116dp"
                    android:layout_marginStart="116dp"
                    android:text="Yellow,"
                    android:textSize="20sp"
                    android:textColor="#FFFF00"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/answerColour1"
                    android:layout_alignStart="@+id/answerColour1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="131dp"
                    android:layout_marginStart="131dp"
                    android:text="Red"
                    android:textSize="20sp"
                    android:textColor="#FF0000"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView7"
                    android:layout_alignStart="@+id/textView7" />
            </RelativeLayout>

            <TextView
                android:id="@+id/answerColours2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.BLue and Yellow"
                android:textColor="#008000"
                android:textSize="20sp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/answerColour3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.Yellow and Red"
                android:textColor="#FFA500"
                android:textSize="20sp"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/answerColour4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.Blue and Red"
                android:textColor="#9400D3"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                android:id="@+id/answerColour5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.Green,"
                    android:textColor="#008000"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="71dp"
                    android:layout_marginStart="71dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange,"
                    android:textColor="#FFA500"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/textView12"
                    android:layout_toStartOf="@+id/textView12"
                    android:layout_marginRight="31dp"
                    android:layout_marginEnd="31dp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Violet"
                    android:layout_marginRight="60dp"
                    android:layout_marginEnd="60dp"
                    android:textColor="#9400D3"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>
        </LinearLayout>



    </ScrollView>
</RelativeLayout>
