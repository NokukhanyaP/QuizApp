<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.nokukhanya.quizapp.MEMO">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:src="@drawable/time"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="solutions"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:fontFamily="cursive"
                android:textSize="40sp"
                android:textColor="#FFFF00"/>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---------------"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:textAlignment="center"
                android:textColor="#FF0000"/>

            <TextView
                android:id="@+id/clockAnswer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.00:00(AM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.12:00 (PM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.00:30 (AM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.13:00 (PM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.01:00(AM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.16:30 (PM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.13:05 (PM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.06:15 (AM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.19:45 (PM)"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/clockAnswer10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.08:50 (AM)"
                android:textAlignment="center"
                android:textColor="#000000"/>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
